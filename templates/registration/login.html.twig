{% extends 'header.html.twig' %}

{% block body %}

    

<form class="container" action="{{path('usr_login')}}" method="post">
    <h1>Connexion utilisateur</h1>
    <div class="w-50">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input  name ="_username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="_password" type="password" class="form-control" id="exampleInputPassword1">
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
    
  


{% endblock %}